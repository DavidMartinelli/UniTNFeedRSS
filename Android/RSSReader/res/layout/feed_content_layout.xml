<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyCourse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/imgCoursesColor"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="7dp"
        android:background="#546dfc" 
        android:layout_alignBottom="@+id/lblCourseDescription"
        android:layout_alignTop="@+id/lblCourseName"/>

    <TextView
        android:id="@+id/lblCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/imgCoursesColor"
        android:text="@string/CourseName"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/lblCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lblCourseName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblCourseName"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="3"
        android:text="@string/CourseDescription"
        android:textSize="8pt" />

</RelativeLayout>