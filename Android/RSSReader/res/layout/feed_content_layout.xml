<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyCourse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgCoursesColor"
        android:layout_width="15dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="7dp"
        android:background="#546dfc" />

    <TextView
        android:id="@+id/lblCourseName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/imgCoursesColor"
        android:text="@string/CourseName"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/lblCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/lblCourseName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblCourseName"
        android:text="@string/CourseDescription"
        android:textSize="20dp" />

</RelativeLayout>